{
  "name": "@zenobi-us/pi-jot",
  "version": "0.1.0",
  "description": "Pi extension for Jot - search and manage markdown notes with AI",
  "author": "zenobi-us",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenobi-us/jot.git",
    "directory": "pkgs/pi-jot"
  },
  "keywords": [
    "pi-package",
    "jot",
    "markdown",
    "notes",
    "ai",
    "duckdb"
  ],
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./services": "./src/services/index.ts",
    "./schemas": "./src/schemas/index.ts"
  },
  "files": [
    "src/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint src/",
    "lint:fix": "bunx eslint src/ --fix",
    "format": "bunx prettier --write src/",
    "prepublishOnly": "bun run typecheck && bun run test"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": ">=0.50.0",
    "@sinclair/typebox": ">=0.32.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "@mariozechner/pi-coding-agent": "^0.50.0",
    "@mariozechner/pi-ai": "^0.50.0",
    "@sinclair/typebox": "^0.32.0"
  },
  "pi": {
    "extensions": [
      "./src/index.ts"
    ],
    "config": {
      "toolPrefix": {
        "type": "string",
        "default": "jot_",
        "description": "Prefix for tool names (e.g., 'jot_search')"
      },
      "defaultPageSize": {
        "type": "number",
        "default": 50,
        "description": "Default number of results per page"
      },
      "cliPath": {
        "type": "string",
        "default": "jot",
        "description": "Path to jot CLI binary"
      },
      "cliTimeout": {
        "type": "number",
        "default": 30000,
        "description": "CLI command timeout in milliseconds"
      }
    }
  }
}
